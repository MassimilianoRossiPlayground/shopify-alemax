{{ 'section-product-slider.scss.css' | asset_url | stylesheet_tag }}


<div class="product-slider">
  {% for block in section.blocks %}
    {%- case block.type -%}
        {%- when 'products' -%}
          {% for product_single in block %}
            {{ product_single.title }}
          {% endfor %}
    {%- endcase -%}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Product Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    }
  ],
  "blocks": [
    {    
      "type": "products",
      "name": "products,
      "settings": [
        {    
          "type": "product_list",
          "id": "product_list",
          "default": "Image banner",
          "label": "Product List"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Slider",
      "blocks": [
        {
          "type": "products"
        }
      ]
    }
  ]
}
{% endschema %}
